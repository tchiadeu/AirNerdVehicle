<div class="container pt-5">
    <div>
      <h1 class="text-white text-center pt-5">Your current bookings</h1>
    </div>
    <div>
      <p class="custom-booking-date text-white text-center">Current bookings requested : <%= Time.now.strftime("%A, %B %d, %Y") %> <%= Time.now.strftime("%H:%M:%S") %></p>
    </div>
  <div class= "booking-list-columns">
    <div class="text-white cards border-bookings-card-left">
      <% @bookings.each do |booking| %>
        <% if booking.status == "Pending" %>
          <div class="card-trip darker-span no-darker">
            <div>
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-pending">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
            <div class="d-flex justify-content-between"><%= simple_form_for(booking) do |f| %>
                <%= f.input :status, as: :hidden, input_html: { value: "accepted" } %>
                <%= f.submit "Accept", class: "btn btn-success" %>
              <% end %>
            </div>
            <div class="d-flex justify-content-between"><%= simple_form_for(booking) do |f| %>
                <%= f.input :status, as: :hidden, input_html: { value: "declined" } %>
                <%= f.submit "Decline", class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        <% elsif booking.status == "accepted" %>
          <div class="card-trip darker-span no-darker">
            <div>
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-accepted">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
          </div>
        <% else %>
          <div class="card-trip darker-span no-darker">
            <div class="booking-card-infos">
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-refused">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="text-white cards border-bookings-card-right">
      <% @rents.each do |booking| %>
        <% if booking.status == "Pending" %>
          <div class="card-trip darker-span no-darker">
            <div class="booking-card-infos">
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-pending">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
          </div>
        <% elsif booking.status == "accepted" %>
          <div class="card-trip darker-span no-darker">
            <div>
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-accepted">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
          </div>
        <% else %>
          <div class="card-trip darker-span no-darker">
            <div>
              <p><%= booking.user.last_name %></p>
              <p>From <%= booking.start %> to <%= booking.end %></p>
              <% duration = booking.end - booking.start %>
              <p><%= booking.vehicle.price.to_i * duration.to_i %></p>
              <p><%= booking.vehicle.name %></p>
              <div class="booking-status-refused">
                <%= booking.status %>
              </div>
            </div>
            <div>
              <img src= <%= booking.vehicle.image %> alt="" class= "img-bookings-mini">
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
