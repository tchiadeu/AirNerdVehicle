<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://iconsplace.com/wp-content/uploads/_icons/ffffff/256/png/death-star-icon-18-256.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse d-flex align-items-center" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%= form_with url: vehicles_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control blur search",
              placeholder: "Add Filters"
            %>
            <%= submit_tag "Search", class: "btn btn-search" %>
          <% end %>
          <li class="btn btn-opacity btn-outline-light mx-1">
            <%= link_to "Vehicles list", vehicles_path, class: "nav-link" %>
          </li>
          <li class="btn btn-opacity btn-outline-light mx-1">
            <%= link_to "Add my own vehicle", new_vehicle_path, class: "nav-link" %>
          </li>
          <li class="dropdown d-flex align-items-center ">
            <%= image_tag "https://w7.pngwing.com/pngs/236/446/png-transparent-palpatine-galactic-republic-anakin-skywalker-galactic-empire-star-wars-starwars-logo-symmetry-sith.png", class: "avatar d-flex align-items-center dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <ul>
                <li>
                  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
                </li>
                <li>
                  <%= link_to "My Vehicles", owner_vehicles_path(current_user), class: "dropdown-item" %>
                </li>
                <li>
                  <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
                </li>
              </ul>
            </div>
          </li>
        <% else %>
          <li class="btn btn-opacity btn-outline-light mx-1">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="btn btn-opacity btn-outline-light mx-1">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
