<h1>All vehicles</h1>

<div class="cards">
<div class="card-trip">
  <% @vehicles.each do |vehicle| %>
      <%= link_to vehicle_path(vehicle) do %>
        <img src="<%= vehicle.image %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= vehicle.name %></h2>
            <p><%= vehicle.city %> | <%= vehicle.category %></p>
          </div>
